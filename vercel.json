{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "vercel-php@0.6.0" },
        { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "public" } }
    ],
    "routes": [
        { "src": "/img/(.*)", "dest": "/storage/app/public/images/" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "blog-nine-iota-54.vercel.app",
        "APP_KEY": "base64:BIhFhu+eKjSWQk1bKozFAZJ2pvpU9wwRQtycNPDQ3Po=",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "outputDirectory": "public",
    "buildCommand": "npm install && npm run build"
}